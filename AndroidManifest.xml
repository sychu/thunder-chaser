<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.sychu.thunderchaser"
      android:versionName="1.1" android:versionCode="1">
    <uses-sdk android:minSdkVersion="4" />

    <application android:icon="@drawable/icon" android:label="@string/app_name" android:name="ThunderChaserApplication">
        <activity android:name=".ThunderChaserActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".ThunderChaserConfig"
                  android:label="@string/configuration">       
        </activity>

    </application>
</manifest>